<style>
* {
  text-align: center;
  font-family: 'Open Sans', sans-serif; 
  color: #820f17
}
table {
  margin: 0 auto;
  text-align: center;
  border-collapse: collapse;
  width: 80%;
}

th, td {
  text-align: center;
}

h1 {
  text-align: center;
}

p {
  text-align: center;
  font-weight: bold;
}
</style>


<table>
  <thead>
    <tr>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @category.name %> </td>
      </tr>
  </tbody>
</table>

<p>Create a Task</p>
<%= form_with model: [@category, @task], local: true do |form| %>

<p>
  <%= form.label :title %> <br/>
  <%= form.text_field :title %>
</p>
<p>
  <%= form.label :description %> <br/>
  <%= form.text_field :description %>
</p>
<p>
  <%= form.label :due_date %><br/>
  <%= form.date_field :due_date %>
</p>

<p>
  <%= form.submit "Submit" %>
</p>
<% end %>

<h2>Tasks</h2>

  <tbody>
      <tr>
        <% @category.tasks.each do |task| %>
        <tr>
        <td><%= task.title %></td>
        <td><%= link_to 'View', category_task_path(@category, task) %></td>
        <td><%= link_to 'Edit', edit_category_task_path(@category, task) %></td>
        <td><%= button_to 'Delete', category_task_path(@category, task), method: :delete %> </td>
        </tr>
        <% end %>
      </tr>
  </tbody>
</table>